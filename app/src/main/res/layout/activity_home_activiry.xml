<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_activiry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="upem.univ.fr.amcf.HomeActiviry">

    <Button
        android:text="SEND SMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:id="@+id/button"
        android:onClick="startSendSMSActivity"/>

    <Button
        android:text="SMS LIST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/button2"
        android:onClick="startListSMSActivity"
        />

    <Button
        android:text="goToLoginPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/goToLoginPage"
        android:onClick="goBackToLoginScreen"/>

    <Button
        android:text="Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:id="@+id/logoutButton"
        android:onClick="logoutFacebookButtonClick" />

    <Button
        android:text="Facebook Chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/logoutButton"
        android:layout_alignRight="@+id/logoutButton"
        android:layout_alignEnd="@+id/logoutButton"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="100dp"
        android:id="@+id/facebookChat"
        android:onClick="openFacebookChat"/>

    <Button
        android:text="StartDirectChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/facebookChat"
        android:layout_toEndOf="@+id/facebookChat"
        android:layout_marginTop="47dp"
        android:id="@+id/button5"
        android:layout_toRightOf="@+id/facebookChat"
        android:onClick="goToDirectChat"/>
</RelativeLayout>
